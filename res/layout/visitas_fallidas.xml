<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        
    <TextView
        android:id="@+id/label_header"
        style="?android:textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_failedvisit"
        android:drawableStart="@drawable/ic_failedvisit"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/visitaf_1"
        android:textStyle="bold" />
    
    <ScrollView android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
  
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dip"
        android:paddingBottom="@dimen/activity_vertical_margin" >    
		<TextView
	        android:id="@+id/label_razon"
	        style="?android:textAppearanceLarge"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingTop="10dip"
	        android:paddingBottom="@dimen/activity_vertical_margin"
	        android:text="@string/razon"
	        android:textStyle="bold" />
		
	    <Spinner
	        android:id="@+id/razon"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="10dip"
	        android:paddingBottom="@dimen/activity_vertical_margin"
	        android:singleLine="true"
	        android:textSize="18sp"
	        android:textStyle="bold" />
    </LinearLayout>
	<TextView
        android:id="@+id/label_otrarazon"
        style="?android:textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dip"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/otrarazon"
        android:textStyle="bold" />    
    
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dip"
        android:paddingBottom="@dimen/activity_vertical_margin" >

        <EditText
            android:id="@+id/otrarazon"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:hint="@string/otrarazon_hint"
            android:singleLine="true"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dip"
        android:paddingBottom="@dimen/activity_vertical_margin" >    
		<TextView
	        android:id="@+id/label_persona"
	        style="?android:textAppearanceLarge"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:paddingTop="10dip"
	        android:paddingBottom="@dimen/activity_vertical_margin"
	        android:text="@string/persona_vf"
	        android:textStyle="bold" />

        <EditText
                android:id="@+id/persona"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:ellipsize="end"
                android:hint="@string/persona_vf_hint"
                android:singleLine="true"
                android:textSize="18sp"
                android:textStyle="bold" />
    </LinearLayout>

    
    <TextView android:layout_height="0dip" 
          android:layout_width="fill_parent"
          android:layout_weight="1" />
    
    </LinearLayout>
    
    </ScrollView>
    

    <View android:id="@+id/divider"
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="?android:attr/dividerHorizontal" />

    <LinearLayout
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        style="?android:attr/buttonBarStyle">

        <Button
            android:background="@drawable/selectable_item_background"
            android:id="@+id/saveButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:drawableLeft="@drawable/ic_ok"
            android:drawableStart="@drawable/ic_ok"
            style="?android:attr/buttonBarStyle" />
        
        <Button
            android:background="@drawable/selectable_item_background"
            android:id="@+id/cancelButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/finish"
            android:drawableLeft="@drawable/ic_error"
        	android:drawableStart="@drawable/ic_error"
            style="?android:attr/buttonBarStyle" />

    </LinearLayout>

</LinearLayout>